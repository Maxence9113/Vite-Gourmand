{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe - Vite & Gourmand{% endblock %}

{% block body %}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            {# Breadcrumb #}
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_account') }}" style="color: var(--primary);">
                            <i data-feather="user" width="16" class="me-1"></i>
                            Mon compte
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Modifier mon mot de passe</li>
                </ol>
            </nav>

            {# Card principale #}
            <div class="account-card">
                <div class="card-header-custom">
                    <div class="d-flex align-items-center">
                        <div class="action-icon me-3">
                            <i data-feather="lock" width="24"></i>
                        </div>
                        <div>
                            <h4 class="mb-0">Modifier mon mot de passe</h4>
                            <small class="text-muted">Sécurisez votre compte avec un mot de passe fort</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">

                    {# Alert info #}
                    <div class="alert alert-info d-flex align-items-start mb-4" role="alert">
                        <i data-feather="info" width="20" class="me-2 mt-1"></i>
                        <div>
                            <strong>Exigences du mot de passe :</strong><br>
                            <small>
                                Minimum 10 caractères avec au moins 1 majuscule, 1 minuscule, 1 chiffre et 1 caractère spécial.
                            </small>
                        </div>
                    </div>

                    {# Formulaire #}
                    {{ form_start(modifyPwd, {'attr': {'class': 'password-form'}}) }}

                        {# Ancien mot de passe #}
                        <div class="form-floating mb-3">
                            {{ form_widget(modifyPwd.actualPassword, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Ancien mot de passe'
                                }
                            }) }}
                            <label for="{{ modifyPwd.actualPassword.vars.id }}">
                                <i data-feather="lock" width="16" class="me-1"></i>
                                Mot de passe actuel
                            </label>
                        </div>
                        {{ form_errors(modifyPwd.actualPassword) }}

                        {# Nouveau mot de passe #}
                        <div class="form-floating mb-3">
                            {{ form_widget(modifyPwd.plainPassword.first, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Nouveau mot de passe'
                                }
                            }) }}
                            <label for="{{ modifyPwd.plainPassword.first.vars.id }}">
                                <i data-feather="key" width="16" class="me-1"></i>
                                Nouveau mot de passe
                            </label>
                        </div>
                        {{ form_errors(modifyPwd.plainPassword.first) }}

                        {# Confirmation nouveau mot de passe #}
                        <div class="form-floating mb-4">
                            {{ form_widget(modifyPwd.plainPassword.second, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Confirmer le nouveau mot de passe'
                                }
                            }) }}
                            <label for="{{ modifyPwd.plainPassword.second.vars.id }}">
                                <i data-feather="check-circle" width="16" class="me-1"></i>
                                Confirmer le nouveau mot de passe
                            </label>
                        </div>
                        {{ form_errors(modifyPwd.plainPassword.second) }}

                        {# Boutons #}
                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary px-4 py-3">
                                <i data-feather="save" width="18" class="me-2"></i>
                                Enregistrer le nouveau mot de passe
                            </button>
                            <a href="{{ path('app_account') }}" class="btn btn-outline-secondary px-4 py-3">
                                <i data-feather="x" width="18" class="me-2"></i>
                                Annuler
                            </a>
                        </div>

                    {{ form_end(modifyPwd) }}

                </div>
            </div>

            {# Conseils de sécurité #}
            <div class="account-card mt-4">
                <div class="card-header-custom">
                    <h5 class="mb-0">
                        <i data-feather="shield" width="20" class="me-2"></i>
                        Conseils de sécurité
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i data-feather="check" width="18" class="me-2" style="color: var(--success);"></i>
                            Utilisez un mot de passe unique pour ce compte
                        </li>
                        <li class="mb-2">
                            <i data-feather="check" width="18" class="me-2" style="color: var(--success);"></i>
                            Évitez les mots de passe faciles à deviner (date de naissance, nom...)
                        </li>
                        <li class="mb-2">
                            <i data-feather="check" width="18" class="me-2" style="color: var(--success);"></i>
                            Changez régulièrement votre mot de passe
                        </li>
                        <li class="mb-0">
                            <i data-feather="check" width="18" class="me-2" style="color: var(--success);"></i>
                            Ne partagez jamais votre mot de passe
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>

{% endblock %}
