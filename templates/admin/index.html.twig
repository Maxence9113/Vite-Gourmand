{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Dashboard Administration</h1>

    {# Cartes de statistiques #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Recettes</h5>
                    <p class="card-text display-4">{{ stats.totalRecipes }}</p>
                    <a href="{{ path('app_admin_recipes') }}" class="btn btn-primary btn-sm">Gérer</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Catégories</h5>
                    <p class="card-text display-4">{{ stats.totalCategories }}</p>
                    <a href="#" class="btn btn-primary btn-sm">Gérer</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Allergènes</h5>
                    <p class="card-text display-4">{{ stats.totalAllergens }}</p>
                    <a href="#" class="btn btn-primary btn-sm">Gérer</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Utilisateurs</h5>
                    <p class="card-text display-4">{{ stats.totalUsers }}</p>
                    <a href="#" class="btn btn-primary btn-sm">Gérer</a>
                </div>
            </div>
        </div>
    </div>

    {# Dernières recettes créées #}
    <div class="row">
        <div class="col-12">
            <h3>Dernières recettes ajoutées</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Titre</th>
                        <th>Catégorie</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for recipe in latestRecipes %}
                    <tr>
                        <td>{{ recipe.id }}</td>
                        <td>{{ recipe.title }}</td>
                        <td>{{ recipe.category ? recipe.category.name : 'N/A' }}</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-info">Voir</a>
                            <a href="#" class="btn btn-sm btn-warning">Modifier</a>
                            <a href="#" class="btn btn-sm btn-danger">Supprimer</a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucune recette pour le moment</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
