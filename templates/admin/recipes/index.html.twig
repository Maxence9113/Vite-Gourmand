{% extends 'base.html.twig' %}

{% block title %}Gestion des Recettes{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des Recettes</h1>
        <div>
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">Retour au Dashboard</a>
            <a href="{{ path('app_admin_recipes_new') }}" class="btn btn-success">Ajouter une recette</a>
        </div>
    </div>

    {# Afficher les messages flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {# Barre de recherche (pour plus tard) #}
    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Rechercher une recette..." id="searchInput">
        </div>
        <div class="col-md-3">
            <select class="form-control" id="categoryFilter">
                <option value="">Toutes les catégories</option>
                {# On ajoutera les catégories dynamiquement plus tard #}
            </select>
        </div>
    </div>

    {# Tableau des recettes #}
    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Catégorie</th>
                        <th>Allergènes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for recipe in recipes %}
                    <tr>
                        <td>{{ recipe.id }}</td>
                        <td>{{ recipe.title }}</td>
                        <td>{{ recipe.description|length > 50 ? recipe.description|slice(0, 50) ~ '...' : recipe.description }}</td>
                        <td>
                            {% if recipe.category %}
                                <span class="badge bg-info">{{ recipe.category.name }}</span>
                            {% else %}
                                <span class="badge bg-secondary">Non défini</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if recipe.allergen|length > 0 %}
                                {% for allergen in recipe.allergen %}
                                    <span class="badge bg-warning text-dark">{{ allergen.name }}</span>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">Aucun</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="#" class="btn btn-sm btn-info" title="Voir les détails">
                                    Voir
                                </a>
                                <a href="{{ path('app_admin_recipes_edit', {id: recipe.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                    Modifier
                                </a>
                                <form method="post" action="{{ path('app_admin_recipes_delete', {id: recipe.id}) }}" style="display: inline;"
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer la recette « {{ recipe.title }} » ?')">
                                    <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                        Supprimer
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            Aucune recette trouvée. <a href="#">Créer une nouvelle recette</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {# Informations sur le nombre de recettes #}
    <div class="mt-3">
        <p class="text-muted">
            Total : <strong>{{ recipes|length }}</strong> recette(s)
        </p>
    </div>
</div>

{# Script pour la recherche en temps réel (optionnel) #}
<script>
    document.getElementById('searchInput')?.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');

        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });
</script>
{% endblock %}