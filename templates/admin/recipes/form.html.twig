{% extends 'base.html.twig' %}

{% block title %}{{ isEdit ? 'Modifier' : 'Ajouter' }} une recette{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>{{ isEdit ? 'Modifier la recette' : 'Ajouter une nouvelle recette' }}</h1>
                <a href="{{ path('app_admin_recipes') }}" class="btn btn-secondary">
                    Retour à la liste
                </a>
            </div>

            {# Afficher les messages flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_row(form.title) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.category) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.allergen) }}
                        <div class="row">
                            {% for allergen in form.allergen %}
                                <div class="col-md-6">
                                    <div class="form-check">
                                        {{ form_widget(allergen) }}
                                        {{ form_label(allergen) }}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        {{ form_errors(form.allergen) }}
                    </div>

                    {# Section pour gérer les illustrations #}
                    <div class="mb-3">
                        <label class="form-label">Illustrations du plat</label>

                        {# Conteneur pour la liste des illustrations #}
                        <div id="illustrations-list"
                             data-prototype="{{ form_widget(form.recipeIllustrations.vars.prototype)|e('html_attr') }}"
                             data-index="{{ form.recipeIllustrations|length }}">

                            {# Si la recette a déjà des illustrations, on les affiche #}
                            {% for illustration in form.recipeIllustrations %}
                                <div class="card mb-3 illustration-item">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                {{ form_row(illustration.imageFile) }}
                                            </div>
                                            <div class="col-md-6">
                                                {{ form_row(illustration.alt_text) }}
                                            </div>
                                        </div>

                                        {# Si on est en édition et qu'il y a déjà une image, l'afficher #}
                                        {% if isEdit and illustration.vars.data.url %}
                                            <div class="mt-2">
                                                <img src="{{ illustration.vars.data.url }}"
                                                     alt="{{ illustration.vars.data.altText }}"
                                                     class="img-thumbnail"
                                                     style="max-width: 200px;">
                                            </div>
                                        {% endif %}

                                        {# Bouton pour supprimer une illustration #}
                                        <button type="button" class="btn btn-danger btn-sm mt-2 remove-illustration">
                                            Supprimer cette illustration
                                        </button>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        {# Bouton pour ajouter une nouvelle illustration #}
                        <button type="button" class="btn btn-success btn-sm mt-2" id="add-illustration">
                            + Ajouter une illustration
                        </button>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_admin_recipes') }}" class="btn btn-secondary">
                            Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            {{ isEdit ? 'Modifier' : 'Créer' }} la recette
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {% if isEdit %}
            <div class="mt-3 text-end">
                <small class="text-muted">
                    ID de la recette : {{ recipe.id }}
                </small>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Inclure le fichier JavaScript pour la gestion des illustrations #}
    {{ importmap('admin-recipe-illustrations') }}
{% endblock %}