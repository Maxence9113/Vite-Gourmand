{% extends 'base.html.twig' %}

{% block title %}Statistiques des commandes{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Statistiques des commandes</h1>

    {# Formulaire de filtres #}
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Filtres</h5>
            <form method="get" action="{{ path('app_admin_order_stats') }}">
                <div class="row">
                    <div class="col-md-4">
                        <label for="menu" class="form-label">Menu</label>
                        <select name="menu" id="menu" class="form-select">
                            <option value="">Tous les menus</option>
                            {% for menuName in availableMenus %}
                                <option value="{{ menuName }}" {{ currentMenu == menuName ? 'selected' : '' }}>
                                    {{ menuName }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="start_date" class="form-label">Date de début</label>
                        <input type="date" name="start_date" id="start_date" class="form-control" value="{{ currentStartDate }}">
                    </div>
                    <div class="col-md-3">
                        <label for="end_date" class="form-label">Date de fin</label>
                        <input type="date" name="end_date" id="end_date" class="form-control" value="{{ currentEndDate }}">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Filtrer</button>
                    </div>
                </div>
                {% if currentMenu or currentStartDate or currentEndDate %}
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <a href="{{ path('app_admin_order_stats') }}" class="btn btn-secondary btn-sm">Réinitialiser les filtres</a>
                        </div>
                    </div>
                {% endif %}
            </form>
        </div>
    </div>

    {# Statistiques globales #}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Nombre total de commandes</h5>
                    <p class="card-text display-4">{{ globalStats.totalOrders }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Chiffre d'affaires total</h5>
                    <p class="card-text display-4">{{ globalStats.totalRevenue|number_format(2, ',', ' ') }} €</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Moyenne personnes/commande</h5>
                    <p class="card-text display-4">{{ globalStats.avgPeoplePerOrder|number_format(1, ',', ' ') }}</p>
                </div>
            </div>
        </div>
    </div>

    {# Graphique : Nombre de commandes par menu #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Nombre de commandes par menu</h5>
                    {% if orderCountByMenu is not empty %}
                        <canvas id="orderCountChart"></canvas>
                    {% else %}
                        <p class="text-muted">Aucune donnée à afficher pour les filtres sélectionnés.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Tableau : Chiffre d'affaires par menu #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Chiffre d'affaires par menu</h5>
                    {% if revenueByMenu is not empty %}
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Menu</th>
                                    <th>Nombre de commandes</th>
                                    <th class="text-end">Chiffre d'affaires</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in revenueByMenu %}
                                    <tr>
                                        <td>{{ item.menuName }}</td>
                                        <td>
                                            {% set orderCount = orderCountByMenu|filter(o => o.menuName == item.menuName)|first %}
                                            {{ orderCount ? orderCount.count : 0 }}
                                        </td>
                                        <td class="text-end">{{ item.totalRevenue|number_format(2, ',', ' ') }} €</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr class="fw-bold">
                                    <td>TOTAL</td>
                                    <td>{{ globalStats.totalOrders }}</td>
                                    <td class="text-end">{{ globalStats.totalRevenue|number_format(2, ',', ' ') }} €</td>
                                </tr>
                            </tfoot>
                        </table>
                    {% else %}
                        <p class="text-muted">Aucune donnée à afficher pour les filtres sélectionnés.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {# Chart.js depuis CDN #}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    {% if orderCountByMenu is not empty %}
    <script>
        // Données du graphique passées depuis le contrôleur
        const chartLabels = {{ chartLabels|raw }};
        const chartData = {{ chartData|raw }};

        // Configuration du graphique
        const ctx = document.getElementById('orderCountChart').getContext('2d');
        const orderCountChart = new Chart(ctx, {
            type: 'bar', // Type de graphique : barres verticales
            data: {
                labels: chartLabels,
                datasets: [{
                    label: 'Nombre de commandes',
                    data: chartData,
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1 // Afficher uniquement des entiers
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return 'Commandes : ' + context.parsed.y;
                            }
                        }
                    }
                }
            }
        });
    </script>
    {% endif %}
{% endblock %}