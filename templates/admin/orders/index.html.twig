{% extends 'base.html.twig' %}

{% block title %}Gestion des Commandes - Admin{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des Commandes</h1>
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">
            <i data-feather="arrow-left"></i> Retour au Dashboard
        </a>
    </div>

    {# Statistiques rapides #}
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="text-muted">Total</h6>
                    <h3 class="mb-0">{{ stats.total }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <h6 class="text-muted">En attente</h6>
                    <h3 class="mb-0 text-warning">{{ stats.pending }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center border-info">
                <div class="card-body">
                    <h6 class="text-muted">Validées</h6>
                    <h3 class="mb-0 text-info">{{ stats.validated }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <h6 class="text-muted">En préparation</h6>
                    <h3 class="mb-0 text-primary">{{ stats.preparing }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center border-info">
                <div class="card-body">
                    <h6 class="text-muted">En livraison</h6>
                    <h3 class="mb-0 text-info">{{ stats.delivering }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <h6 class="text-muted">Attente matériel</h6>
                    <h3 class="mb-0 text-warning">{{ stats.waitingMaterial }}</h3>
                </div>
            </div>
        </div>
    </div>

    {# Filtres #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="status" class="form-label">Statut</label>
                    <select name="status" id="status" class="form-select">
                        <option value="all" {% if currentStatus == 'all' or not currentStatus %}selected{% endif %}>Tous les statuts</option>
                        <option value="pending" {% if currentStatus == 'pending' %}selected{% endif %}>En attente</option>
                        <option value="validated" {% if currentStatus == 'validated' %}selected{% endif %}>Validée</option>
                        <option value="preparing" {% if currentStatus == 'preparing' %}selected{% endif %}>En préparation</option>
                        <option value="ready" {% if currentStatus == 'ready' %}selected{% endif %}>Prête à livrer</option>
                        <option value="delivering" {% if currentStatus == 'delivering' %}selected{% endif %}>En livraison</option>
                        <option value="delivered" {% if currentStatus == 'delivered' %}selected{% endif %}>Livrée</option>
                        <option value="waiting_material_return" {% if currentStatus == 'waiting_material_return' %}selected{% endif %}>Attente retour matériel</option>
                        <option value="completed" {% if currentStatus == 'completed' %}selected{% endif %}>Terminée</option>
                        <option value="cancelled" {% if currentStatus == 'cancelled' %}selected{% endif %}>Annulée</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="date" class="form-label">Période</label>
                    <select name="date" id="date" class="form-select">
                        <option value="" {% if not currentDate %}selected{% endif %}>Toutes les dates</option>
                        <option value="today" {% if currentDate == 'today' %}selected{% endif %}>Aujourd'hui</option>
                        <option value="week" {% if currentDate == 'week' %}selected{% endif %}>7 derniers jours</option>
                        <option value="month" {% if currentDate == 'month' %}selected{% endif %}>30 derniers jours</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="search" class="form-label">Recherche</label>
                    <input type="text" name="search" id="search" class="form-control"
                           placeholder="N° commande, nom, email..."
                           value="{{ currentSearch }}">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i data-feather="filter"></i> Filtrer
                    </button>
                    <a href="{{ path('app_admin_orders') }}" class="btn btn-outline-secondary">
                        <i data-feather="x"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    {# Liste des commandes #}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Liste des Commandes ({{ orders|length }})</h5>
            <div class="btn-group btn-group-sm">
                <a href="{{ path('app_admin_orders', {sort: 'createdAt', order: currentOrder == 'DESC' ? 'ASC' : 'DESC'}) }}"
                   class="btn btn-outline-secondary">
                    <i data-feather="calendar"></i> Date
                </a>
                <a href="{{ path('app_admin_orders', {sort: 'deliveryDateTime', order: currentOrder == 'DESC' ? 'ASC' : 'DESC'}) }}"
                   class="btn btn-outline-secondary">
                    <i data-feather="truck"></i> Livraison
                </a>
                <a href="{{ path('app_admin_orders', {sort: 'totalPrice', order: currentOrder == 'DESC' ? 'ASC' : 'DESC'}) }}"
                   class="btn btn-outline-secondary">
                    <i data-feather="dollar-sign"></i> Montant
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            {% if orders is empty %}
                <div class="text-center py-5">
                    <i data-feather="inbox" class="mb-3" style="width: 48px; height: 48px;"></i>
                    <p class="text-muted">Aucune commande trouvée avec ces filtres.</p>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>N° Commande</th>
                                <th>Client</th>
                                <th>Menu</th>
                                <th>Date de livraison</th>
                                <th>Montant</th>
                                <th>Statut</th>
                                <th class="text-center">Matériel</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in orders %}
                            <tr>
                                <td>
                                    <strong>{{ order.orderNumber }}</strong><br>
                                    <small class="text-muted">{{ order.createdAt|date('d/m/Y H:i') }}</small>
                                </td>
                                <td>
                                    {{ order.customerFirstname }} {{ order.customerLastname }}<br>
                                    <small class="text-muted">{{ order.customerEmail }}</small>
                                </td>
                                <td>
                                    {{ order.menuName }}<br>
                                    <small class="text-muted">{{ order.numberOfPersons }} personne(s)</small>
                                </td>
                                <td>
                                    <i data-feather="calendar" style="width: 16px; height: 16px;"></i>
                                    {{ order.deliveryDateTime|date('d/m/Y') }}<br>
                                    <small class="text-muted">
                                        <i data-feather="clock" style="width: 14px; height: 14px;"></i>
                                        {{ order.deliveryDateTime|date('H:i') }}
                                    </small>
                                </td>
                                <td>
                                    <strong>{{ (order.totalPrice / 100)|number_format(2, ',', ' ') }} €</strong>
                                </td>
                                <td>
                                    {% include 'admin/orders/_status_badge.html.twig' with {'status': order.status} %}
                                </td>
                                <td class="text-center">
                                    {% if order.hasMaterialLoan %}
                                        {% if order.materialReturned %}
                                            <span class="badge bg-success" title="Matériel retourné">
                                                <i data-feather="check-circle" style="width: 14px; height: 14px;"></i>
                                            </span>
                                        {% elseif order.status.value == 'waiting_material_return' %}
                                            <span class="badge bg-warning" title="En attente de retour">
                                                <i data-feather="rotate-ccw" style="width: 14px; height: 14px;"></i>
                                            </span>
                                        {% else %}
                                            <span class="badge bg-info" title="Avec matériel">
                                                <i data-feather="box" style="width: 14px; height: 14px;"></i>
                                            </span>
                                        {% endif %}
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <a href="{{ path('app_admin_orders_show', {id: order.id}) }}"
                                       class="btn btn-sm btn-outline-primary">
                                        <i data-feather="eye" style="width: 14px; height: 14px;"></i> Voir
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
    // Initialiser Feather Icons
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof feather !== 'undefined') {
            feather.replace();
        }
    });
</script>
{% endblock %}
