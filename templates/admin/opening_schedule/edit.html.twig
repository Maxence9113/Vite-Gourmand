{% extends 'base.html.twig' %}

{% block title %}Modifier un horaire{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="mb-4">
                <a href="{{ path('app_admin_opening_schedule_index') }}" class="btn btn-sm btn-outline-secondary">
                    <i data-feather="arrow-left"></i>
                    Retour Ã  la liste
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h1 class="h4 mb-0">Modifier l'horaire - {{ opening_schedule.dayOfWeek.label }}</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.dayOfWeek) }}
                            {{ form_widget(form.dayOfWeek) }}
                            {{ form_errors(form.dayOfWeek) }}
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                {{ form_widget(form.isOpen) }}
                                {{ form_label(form.isOpen) }}
                            </div>
                            {{ form_errors(form.isOpen) }}
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.openingTime) }}
                                {{ form_widget(form.openingTime) }}
                                {{ form_errors(form.openingTime) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_label(form.closingTime) }}
                                {{ form_widget(form.closingTime) }}
                                {{ form_errors(form.closingTime) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_admin_opening_schedule_index') }}" class="btn btn-secondary">
                                Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i data-feather="save"></i>
                                Enregistrer les modifications
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
