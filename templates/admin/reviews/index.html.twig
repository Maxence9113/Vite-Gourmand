{% extends 'base.html.twig' %}

{% block title %}Gestion des Avis{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des Avis Clients</h1>
        <div>
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">Retour au Dashboard</a>
        </div>
    </div>

    {# Afficher les messages flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {# Statistiques rapides #}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-primary">{{ reviews|filter(r => r.isValidated)|length }}</h3>
                    <p class="mb-0 text-muted">Avis validés</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-warning">{{ reviews|filter(r => not r.isValidated)|length }}</h3>
                    <p class="mb-0 text-muted">En attente de validation</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="text-info">{{ reviews|length }}</h3>
                    <p class="mb-0 text-muted">Total des avis</p>
                </div>
            </div>
        </div>
    </div>

    {# Filtres #}
    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Rechercher par nom ou commentaire..." id="searchInput">
        </div>
        <div class="col-md-6">
            <select class="form-select" id="filterStatus">
                <option value="all">Tous les avis</option>
                <option value="pending">En attente de validation</option>
                <option value="validated">Validés</option>
            </select>
        </div>
    </div>

    {# Table des avis #}
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Client</th>
                        <th>Note</th>
                        <th>Commentaire</th>
                        <th>Statut</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody id="reviewsTable">
                    {% for review in reviews %}
                    <tr class="review-row" data-status="{{ review.isValidated ? 'validated' : 'pending' }}">
                        <td>{{ review.createdAt|date('d/m/Y H:i') }}</td>
                        <td class="fw-bold">{{ review.customerName }}</td>
                        <td>
                            <div class="rating-stars">
                                {% for i in 1..5 %}
                                    {% if i <= review.rating %}
                                        <i data-feather="star" width="16" class="star-filled"></i>
                                    {% else %}
                                        <i data-feather="star" width="16" class="star-empty"></i>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </td>
                        <td>
                            {% if review.comment %}
                                {% if review.comment|length > 100 %}
                                    <div class="comment-container">
                                        <div class="comment-preview" id="preview-{{ review.id }}">
                                            {{ review.comment|slice(0, 100) }}...
                                            <button class="btn btn-link btn-sm p-0 ms-1" onclick="toggleComment({{ review.id }})" id="btn-{{ review.id }}">
                                                <small>Voir plus</small>
                                            </button>
                                        </div>
                                        <div class="comment-full d-none" id="full-{{ review.id }}">
                                            {{ review.comment }}
                                            <button class="btn btn-link btn-sm p-0 ms-1" onclick="toggleComment({{ review.id }})">
                                                <small>Voir moins</small>
                                            </button>
                                        </div>
                                    </div>
                                {% else %}
                                    {{ review.comment }}
                                {% endif %}
                            {% else %}
                                <span class="text-muted fst-italic">Aucun commentaire</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if review.isValidated %}
                                <span class="badge bg-success">Validé</span>
                            {% else %}
                                <span class="badge bg-warning text-dark">En attente</span>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                {% if not review.isValidated %}
                                    <form method="post"
                                          action="{{ path('app_admin_reviews_validate', {id: review.id}) }}"
                                          style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-success" title="Valider">
                                            <i data-feather="check" width="16"></i>
                                        </button>
                                    </form>
                                {% else %}
                                    <form method="post"
                                          action="{{ path('app_admin_reviews_reject', {id: review.id}) }}"
                                          style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-warning" title="Rejeter">
                                            <i data-feather="x" width="16"></i>
                                        </button>
                                    </form>
                                {% endif %}

                                <form method="post"
                                      action="{{ path('app_admin_reviews_delete', {id: review.id}) }}"
                                      style="display: inline;"
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet avis ?')">
                                    <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                        <i data-feather="trash-2" width="16"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="text-center">
                            <div class="alert alert-info mb-0">
                                Aucun avis pour le moment.
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {# Informations sur le nombre d'avis #}
    <div class="mt-3">
        <p class="text-muted">
            Total : <strong>{{ reviews|length }}</strong> avis
        </p>
    </div>
</div>

{# Script pour la recherche et le filtrage #}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const filterStatus = document.getElementById('filterStatus');
        const rows = document.querySelectorAll('.review-row');

        function filterRows() {
            const searchTerm = searchInput?.value.toLowerCase() || '';
            const statusFilter = filterStatus?.value || 'all';

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                const status = row.dataset.status;

                const matchesSearch = text.includes(searchTerm);
                const matchesStatus = statusFilter === 'all' || status === statusFilter;

                row.style.display = matchesSearch && matchesStatus ? '' : 'none';
            });
        }

        searchInput?.addEventListener('input', filterRows);
        filterStatus?.addEventListener('change', filterRows);
    });

    function toggleComment(id) {
        const preview = document.getElementById('preview-' + id);
        const full = document.getElementById('full-' + id);

        preview.classList.toggle('d-none');
        full.classList.toggle('d-none');
    }
</script>

<style>
    .rating-stars {
        display: flex;
        gap: 0.125rem;
    }

    .rating-stars .star-filled {
        color: #ffc107;
        fill: #ffc107;
        stroke: #f59e0b;
        stroke-width: 1.5;
    }

    .rating-stars .star-empty {
        color: #e5e7eb;
        fill: #f3f4f6;
        stroke: #d1d5db;
        stroke-width: 1.5;
    }

    .comment-preview {
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>
{% endblock %}