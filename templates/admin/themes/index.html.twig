{% extends 'base.html.twig' %}

{% block title %}Gestion des Thèmes{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des Thèmes</h1>
        <div>
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">Retour au Dashboard</a>
            <a href="{{ path('app_admin_themes_new') }}" class="btn btn-success">Ajouter un thème</a>
        </div>
    </div>

    {# Afficher les messages flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {# Barre de recherche #}
    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Rechercher un thème..." id="searchInput">
        </div>
    </div>

    {# Grille des thèmes avec cartes #}
    <div class="row" id="themesGrid">
        {% for theme in themes %}
        <div class="col-md-4 mb-4 theme-card">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ theme.name }}</h5>
                    <p class="card-text flex-grow-1">
                        {{ theme.description|length > 100 ? theme.description|slice(0, 100) ~ '...' : theme.description }}
                    </p>
                    <div class="btn-group mt-2" role="group">
                        <a href="{{ path('app_admin_themes_edit', {id: theme.id}) }}" class="btn btn-sm btn-warning">
                            Modifier
                        </a>
                        <form method="post" action="{{ path('app_admin_themes_delete', {id: theme.id}) }}" style="display: inline;"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le thème « {{ theme.name }} » ?')">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-info text-center">
                Aucun thème trouvé. <a href="{{ path('app_admin_themes_new') }}" class="alert-link">Créer un nouveau thème</a>
            </div>
        </div>
        {% endfor %}
    </div>

    {# Informations sur le nombre de thèmes #}
    <div class="mt-3">
        <p class="text-muted">
            Total : <strong>{{ themes|length }}</strong> thème(s)
        </p>
    </div>
</div>

{# Script pour la recherche en temps réel #}
<script>
    document.getElementById('searchInput')?.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const cards = document.querySelectorAll('.theme-card');

        cards.forEach(card => {
            const text = card.textContent.toLowerCase();
            card.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });
</script>
{% endblock %}