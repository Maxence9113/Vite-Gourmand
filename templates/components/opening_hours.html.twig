{#
    Component réutilisable pour afficher les horaires d'ouverture

    Usage :
    {% include 'components/opening_hours.html.twig' with {
        'schedules': schedules,
        'show_title': true
    } %}
#}

{% set show_title = show_title|default(true) %}

<div class="opening-hours">
    {% if show_title %}
        <h3 class="h5 mb-3">Horaires d'ouverture</h3>
    {% endif %}

    {% if schedules is defined and schedules|length > 0 %}
        <div class="list-group list-group-flush">
            {% for item in schedules %}
                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                    <span class="fw-medium">{{ item.label }}</span>
                    <span>
                        {% if item.isOpen and item.openingTime and item.closingTime %}
                            <span class="text-success">{{ item.openingTime }} - {{ item.closingTime }}</span>
                        {% else %}
                            <span class="text-muted">Fermé</span>
                        {% endif %}
                    </span>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-muted">Horaires non disponibles pour le moment.</p>
    {% endif %}
</div>
